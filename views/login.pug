html
	include head.pug
	body
		div(class="login")
			form(class="form-horizontal" method="POST")
				//h2 Login

				div(class="form-group")
					label(for="inputEmail3" class="col-sm-2 control-label") Username
					div(class="col-sm-10")
						input(type="text" class="form-control" id="inputEmail3" name="username" placeholder="Email")

				div(class="form-group")
